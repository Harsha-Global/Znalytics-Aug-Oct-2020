@model List<MvcApp.Models.Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.AppTitle = "eCommerce";
}

<h2>Employees</h2>
<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Email</th>
            <th>CTC per Hour</th>
            <th>Date of Joining</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmpName</td>
                <td>@item.Email</td>
                <td>@item.CTCPerHour</td>
                <td>@item.DateOfJoining</td>
            </tr>
        }
    </tbody>
</table>

