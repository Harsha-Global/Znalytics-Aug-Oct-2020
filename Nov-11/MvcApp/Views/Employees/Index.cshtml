@model List<MvcApp.Models.Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.AppTitle = "eCommerce";
}

<h2>
    Employees
    <a href="@Url.Action("Create", "Employees")" class="btn btn-primary float-right mt-1">
        <span class="fa fa-plus-circle"></span>
        New Employee
    </a>
</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Email</th>
            <th>CTC per Hour</th>
            <th>Date of Joining</th>
            <th class="text-muted">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmpName</td>

                <td>@item.Email</td>

                <td>
                    @if (item.CTCPerHour.HasValue)
                    {
                        <span>@item.CTCPerHour.Value.ToString("C")</span>
                    }
                    else
                    {
                        <span></span>
                    }
                </td>

                <td>
                    @if (item.DateOfJoining.HasValue)
                    {
                        <span>@item.DateOfJoining.Value.ToString("d/M/yyyy")</span>
                    }
                </td>

                <td>
                    <a href="@Url.Action("Details", "Employees", new { id = item.EmpID  })" class="btn btn-secondary btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "Employees", new { id = item.EmpID  })" class="btn btn-info btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Employees", new { id = item.EmpID  })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

