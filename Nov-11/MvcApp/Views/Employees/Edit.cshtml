@model MvcApp.Models.Employee

@{
    ViewBag.Title = "Edit";
    ViewBag.AppTitle = "eCommerce";
}

<h2 class="border-bottom pb-2">
    <i class="fa fa-user-circle mr-1"></i>
    Edit Employee
</h2>

<form method="post">
    <div class="row">
        <div class="col-lg-8">

            <div class="text-danger">
                @Html.ValidationSummary()
                @Html.HiddenFor(temp => temp.EmpID)
                @* EmpID should be submitted; but not shown to the user*@
            </div>

            <div class="form-group form-row">
                @Html.LabelFor(temp => temp.EmpName, new { @class = "col-lg-4 col-form-label" })

                <div class="col-lg-8">
                    @Html.TextBoxFor(temp => temp.EmpName,
                    new { @class = "form-control", placeholder = "Employee Name" })

                    @Html.ValidationMessageFor(temp => temp.EmpName)
                </div>
            </div>

            <div class="form-group form-row">
                @Html.LabelFor(temp => temp.Email, new { @class = "col-lg-4 col-form-label" })

                <div class="col-lg-8">
                    @Html.TextBoxFor(temp => temp.Email,
                    new { @class = "form-control", placeholder = "Email" })

                    @Html.ValidationMessageFor(temp => temp.Email)
                </div>
            </div>

            <div class="form-group form-row">
                @Html.LabelFor(temp => temp.CTCPerHour, new { @class = "col-lg-4 col-form-label" })

                <div class="col-lg-8">
                    @Html.TextBoxFor(temp => temp.CTCPerHour,
                    new { @class = "form-control", placeholder = "CTC per hour", type = "number" })

                    @Html.ValidationMessageFor(temp => temp.CTCPerHour)
                </div>
            </div>

            <div class="form-group form-row">
                @Html.LabelFor(temp => temp.DateOfJoining, new { @class = "col-lg-4 col-form-label" })

                <div class="col-lg-8">
                    @Html.TextBoxFor(temp => temp.DateOfJoining,
                    new { @class = "form-control", placeholder = "Date of Joining", type = "date", value = Model.DateOfJoining.Value.ToString("yyyy-MM-dd") })

                    @Html.ValidationMessageFor(temp => temp.DateOfJoining)
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-right border-top pt-2">

                    <a href="@Url.Action("Index", "Employees")" class="btn btn-secondary">
                        <i class="fa fa-arrow-circle-left mr-1"></i>
                        Back to Employees
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save mr-1"></i>
                        Save
                    </button>

                </div>
            </div>

        </div>
    </div>
</form>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<style>
    .field-validation-error
    {
        color: red;
    }
</style>
